<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GestoreDnD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <item name="colorPrimary">@color/dm_primary</item>
        <item name="colorPrimaryVariant">@color/dm_light_primary</item>
        <item name="colorOnPrimary">@color/dm_primary_text</item>

        <item name="colorSecondary">@color/dm_desat_accent</item>
        <item name="colorOnSecondary">@color/dm_primary_text</item>
    </style>

    <style name="Base.Theme.GestoreDnD.NoActionBar"></style>

    <style name="Toolbar">
        <item name="android:background">@color/dm_light_primary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/dm_primary</item>
        <item name="android:backgroundTint">@color/dm_primary</item>
        <item name="android:textColor">@color/dm_primary_text</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/dm_primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Element">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/dm_light_primary</item>
        <item name="android:textColor">@color/dm_primary_text</item>
    </style>

    <style name="Divider">
        <item name="android:color">@color/dm_divider</item>
    </style>

    <style name="Icon">
        <item name="android:tint">@color/dm_primary_text</item>
    </style>

    <style name="EditableText">
        <item name="android:color">@color/dm_desat_accent</item>
    </style>

</resources>