<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterSheetFragments.StatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/HP"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtHd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/HD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/AC"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/Speed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtComp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/Proficiency"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtInit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="@string/Initiative"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtHpV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtHdV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:inputType="text"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txtCaV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtSpeedV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtProfV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtInitV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>