<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GestoreDnD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/primary_text</item>

        <item name="colorSecondary">@color/desat_accent</item>
        <item name="colorOnSecondary">@color/primary_text</item>

    </style>

    <style name="Base.Theme.GestoreDnD.NoActionBar"></style>

    <style name="Toolbar">
        <item name="android:background">@color/dark_primary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Element">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/dark_primary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Divider">
        <item name="android:color">@color/divider</item>
    </style>

    <style name="Icon">
        <item name="android:tint">@color/primary_text</item>
    </style>

    <style name="EditableText">
        <item name="android:color">@color/desat_accent</item>
    </style>

    <style name="ChipGroup">
        <item name="android:background">@color/primary</item>

    </style>

    <style name="Base.Theme.GestoreDnD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.GestoreDnD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>